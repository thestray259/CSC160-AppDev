<Window x:Class="WPF.DB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="DB" Height="450" Width="800">
    <StackPanel Loaded="Window_Loaded">
        <Button x:Name="btnDoIt" Content="Do It" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 10, 10, 10" Click="btnDoIt_Click" />
        <DataGrid x:Name="dg" HorizontalAlignment="Center" />
        <DataGrid x:Name="dg2" ItemsSource="{Binding}" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
