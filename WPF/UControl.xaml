<Window x:Class="WPF.UControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        xmlns:uc="clr-namespace:WPF.UserControls"
        mc:Ignorable="d"
        Title="UControl" Height="100" Width="400" SizeToContent="WidthAndHeight">
    <StackPanel>
        <uc:TextBoxLimiter Title="Name: " MaxLength="30" TitleWidth="70"/>
        <uc:TextBoxLimiter Title="Address: " MaxLength="30" TitleWidth="70"/>
        <uc:TextBoxLimiter Title="SSN: " MaxLength="12" TitleWidth="70"/>
    </StackPanel>
</Window>
