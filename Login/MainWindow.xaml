<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="Main Page" Height="150" Width="300">
    <StackPanel >
        <TextBlock Margin="10" Text="Create Account or Login" HorizontalAlignment="Center" FontSize="24"/>
        <Button Width="90" Height="20" Content="Create Account" Click="Button_ClickCreateAccount"/>
        <Button Margin="10" Width="90" Height="20" Content="Login" Click="Button_ClickLogin"/>
    </StackPanel>
</Window>
