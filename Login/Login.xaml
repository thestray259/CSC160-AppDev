<Window x:Class="Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="500">
    <WrapPanel Margin="10">
        <TextBlock Text="Username:" FontSize="16" Width="80" Height="30" Margin="10"/>
        <TextBox x:Name="tbUsernameLogin" Width="350" Height="30" Margin="10" FontSize="16"/>

        <TextBlock Text="Password:" FontSize="16" Width="80" Height="30" Margin="10"/>
        <TextBox x:Name="tbPasswordLogin" Width="350" Height="30" Margin="10" FontSize="16"/>

        <Button Margin="10" Content="Login" FontSize="16" Width="460" x:Name="btnLogin" Click="btnLogin_Click"/>
    </WrapPanel>
</Window>
